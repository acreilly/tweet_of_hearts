<div class="container">
  <fieldset>
    <legend>Followers</legend>
    <ul>
      <% current_user.followers.each do |follower| %>
      <li>
        <a href="/users/<%=follower.id%>"><i class="fa fa-heart-o fa-lg"></i><%= follower.email %><a>
      </li>
      <% end %>
    </ul>
  </fieldset>

    <fieldset>
    <legend>Following</legend>
    <ul>
      <% Relationship.where(follower_id: session[:user_id]).each do |following| %>
      <li><i class="fa fa-heart-o fa-lg"></i>
        <a href="/users/<%=following.id%>"><%= User.find_by_id(following.user_id).email %></a>
      </li>
      <% end %>
    </ul>
  </fieldset>
</div>
